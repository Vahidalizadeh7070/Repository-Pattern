@model BooksViewModel

@{
    ViewData["Title"] = "List";
}

<h1>List</h1>

<p>
    <a asp-action="Create" class="btn btn-success rounded-3 shadow">Create New</a>
</p>

<div class="rounded-3 shadow">
    <div class="p-3">
        @if (Model.Books.Count() == 0)
        {
            <h3 class="text-danger text-center p-5">@Model.Text</h3>
        }
        else
        {
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Name
                            </th>
                            <th>
                                Author
                            </th>
                            <th>
                                Subject
                            </th>
                            <th>
                                Release Date
                            </th>
                            <th>Count <small class="text-light badge badge-pill bg-danger">@Model.Text</small></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Books)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Author)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Subject)
                                </td>
                                <td>
                                    @item.ReleaseDate.ToString(" dddd, dd MMM yyy ")
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="text-decoration-none text-secondary">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none text-secondary">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="text-decoration-none text-secondary">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>




