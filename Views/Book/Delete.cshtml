@model RepositoryPattern.Data.ViewModels.BookViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-black">Delete</h1>

<h3 class="text-secondary font-weight-lighter">Are you sure you want to delete this?</h3>
<div class="shadow rounded-3 col-md-6 offset-md-3">
    <div class="p-3">
        <h6 class="text-secondary font-weight-lighter">You can delete the book that you have added before</h6>
        <hr />
        @if (Model == null)
        {
            <h3 class="text-danger text-center p-5">@ViewBag.Message</h3>
        }
        else
        {
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Author)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Author)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Subject)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Subject)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.ReleaseDate)
                </dt>
                <dd class="col-sm-9">
                    @Model.ReleaseDate.ToString(" dddd, dd MMM yyy ")
                </dd>
            </dl>
        }

        <div class="pb-5">
            <form asp-action="DeleteConfirmation">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger rounded-3 float-right ml-2" />
                <a asp-action="List" class="btn btn-secondary rounded-3 float-right">Back to List</a>
            </form>
        </div>
    </div>
</div>

